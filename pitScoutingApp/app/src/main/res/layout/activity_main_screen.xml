<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lilia.pitscoutingapp.mainScreen">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/autonInput"
        android:layout_alignBaseline="@+id/autonText"
        android:layout_alignBottom="@+id/autonText"
        android:layout_alignLeft="@+id/driveInput"
        android:layout_alignStart="@+id/driveInput"
        android:inputType="textLongMessage"
        android:layout_alignRight="@+id/driveInput"
        android:layout_alignEnd="@+id/driveInput"
        android:layout_x="308dp"
        android:layout_y="110dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        android:ems="10"
        android:id="@+id/driveInput"
        android:layout_x="342dp"
        android:layout_y="206dp"
        android:layout_alignBaseline="@+id/driveText"
        android:layout_alignBottom="@+id/driveText"
        android:layout_alignLeft="@+id/teamInput"
        android:layout_alignStart="@+id/teamInput" />

    <TextView
        android:text="Drive Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driveText"
        android:layout_marginTop="38dp"
        android:layout_x="95dp"
        android:layout_y="157dp"
        android:textSize="24sp"
        android:layout_below="@+id/teamInput"
        android:layout_alignLeft="@+id/teamText"
        android:layout_alignStart="@+id/teamText" />

    <TextView
        android:text="Auton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/autonText"
        android:layout_x="126dp"
        android:layout_y="248dp"
        android:textSize="24sp"
        android:layout_below="@+id/driveInput"
        android:layout_alignLeft="@+id/driveText"
        android:layout_alignStart="@+id/driveText" />

    <Button
        android:text="Pictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:id="@+id/pictureButton"
        android:layout_x="530dp"
        android:layout_y="330dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/autonInput"
        android:layout_alignEnd="@+id/autonInput"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:text="Save Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveInformation"
        android:layout_x="66dp"
        android:layout_y="324dp"
        android:layout_alignBaseline="@+id/pictureButton"
        android:layout_alignBottom="@+id/pictureButton"
        android:layout_alignRight="@+id/teamText"
        android:layout_alignEnd="@+id/teamText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/teamInput"
        android:layout_x="412dp"
        android:layout_y="56dp"
        android:layout_marginRight="89dp"
        android:layout_marginEnd="89dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Team Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:id="@+id/teamText"
        android:layout_x="76dp"
        android:layout_y="62dp"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
